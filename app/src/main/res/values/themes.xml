<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApuntesFotograficos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orage_m</item>
        <item name="colorPrimaryVariant">@color/orage_m</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orage_m</item>
        <item name="colorSecondaryVariant">@color/orage_m</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="subtitle_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="et_style">
        <item name="android:background">@drawable/background_et</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>
    <style name="et_style_dialog" >
        <item name="android:background">@drawable/bg_et_dialog</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="theme">@style/Theme.ApuntesFotograficos</item>
    </style>
    <style name="button_style">
        <item name="android:background">@drawable/background_et</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="button_style_no_bg" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="icon_style">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
    </style>
</resources>